<?xml version="1.0"?>
<layout version="0.1.0">
    <default>
        <reference name="before_body_end">
            <block type="core/template" name="postnl_checkout_base_url"
                   template="DMP/PostNL2014/checkout/baseUrl.phtml"/>
        </reference>
    </default>

    <!-- default checkout -->
    <checkout_onepage_index>
        <reference name="head">
            <action method="addItem">
                <type>skin_js</type>
                <file>js/DMP/PostNL2014/jquery-postnl.min.js</file>
            </action>
            <action method="addItem">
                <type>skin_js</type>
                <file>js/DMP/PostNL2014/checkout.js</file>
            </action>
            <action method="addItem">
                <type>skin_js</type>
                <file>js/DMP/PostNL2014/postnl.js</file>
            </action>
            <action method="addItem">
                <type>skin_css</type>
                <file>css/DMP/PostNL2014/postnl_options.css</file>
            </action>
        </reference>
        <reference name="checkout.onepage.shipping_method.available">
            <action method="setTemplate">
                <template>DMP/PostNL2014/checkout/onepage/shipping_method/available.phtml</template>
            </action>
        </reference>
    </checkout_onepage_index>
    <checkout_onepage_shippingmethod>
        <reference name="root">
            <action method="setTemplate">
                <template>DMP/PostNL2014/checkout/onepage/shipping_method/available.phtml</template>
            </action>
        </reference>
    </checkout_onepage_shippingmethod>

    <!-- IWD checkout -->
    <opc_index_index>
        <reference name="head">
            <action method="addItem">
                <type>skin_js</type>
                <file>js/DMP/PostNL2014/jquery-postnl.min.js</file>
            </action>
