            </action>
            <action method="addItem">
                <type>skin_js</type>
                <file>js/DMP/PostNL2014/postnl.js</file>
            </action>
            <action method="addItem">
                <type>skin_css</type>
                <file>css/DMP/PostNL2014/postnl_options.css</file>
            </action>
        </reference>

        <reference name="checkout.onepage.shipping_method.available">
            <action method="setTemplate">
                <template>DMP/PostNL2014/checkout/onepage/shipping_method/available.phtml</template>
            </action>
        </reference>
    </opc_index_index>

    <!-- Idev OneStepCheckout-->
    <onestepcheckout_index_index>

        <reference name="head">
            <action method="addItem">
                <type>skin_js</type>
                <file>js/DMP/PostNL2014/jquery-postnl.min.js</file>
            </action>
            <action method="addItem">
                <type>skin_js</type>
                <file>js/DMP/PostNL2014/checkout_type/onestepcheckout_index_index.js</file>
            </action>
            <action method="addItem">
                <type>skin_js</type>
                <file>js/DMP/PostNL2014/checkout.js</file>
            </action>
            <action method="addItem">
                <type>skin_js</type>
                <file>js/DMP/PostNL2014/postnl.js</file>
            </action>
            <action method="addItem">
                <type>skin_css</type>
                <file>css/DMP/PostNL2014/postnl_options.css</file>
            </action>
        </reference>
        <reference name="choose-shipping-method">
            <action method="setTemplate">
                <template>DMP/PostNL2014/checkout/onepage/shipping_method/available.phtml</template>
            </action>
        </reference>
    </onestepcheckout_index_index>
    <onestepcheckout_ajax_save_billing>
        <reference name="choose-shipping-method">
            <action method="setTemplate">
                <template>DMP/PostNL2014/checkout/onepage/shipping_method/available.phtml</template>
            </action>
        </reference>
    </onestepcheckout_ajax_save_billing>


